{
    "name": "sweetchuck/robo-phpunit",
    "description": "Robo task to run PHPUnit related commands",
    "keywords": [
        "robo-tasks",
        "phpunit"
    ],
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "DÃ¡vid Andor",
            "role": "Maintainer",
            "homepage": "https://github.com/Sweetchuck"
        }
    ],
    "support": {
        "source": "https://github.com/Sweetchuck/robo-phpunit",
        "issues": "https://github.com/Sweetchuck/robo-phpunit/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "php": ">=7.2",
        "ext-dom": "*",
        "ext-pcre": "*",
        "consolidation/robo": "^2.0",
        "danielstjules/stringy": "^3.1",
        "sweetchuck/cli-cmd-builder": "^0.0",
        "sweetchuck/utils": "dev-master"
    },
    "require-dev": {
        "ext-json": "*",
        "codeception/codeception": "^4.0",
        "codeception/module-asserts": "^1.1",
        "squizlabs/php_codesniffer": "^3.5",
        "sweetchuck/codeception-module-robo-task-runner": "^0.7",
        "sweetchuck/git-hooks": "^0.0",
        "sweetchuck/robo-git": "^0.2",
        "sweetchuck/robo-phpcs": "^0.1",
        "symfony/error-handler": "^5.0",
        "symfony/finder": "^4.0",
        "webmozart/path-util": "^2.3"
    },
    "suggest": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\Robo\\PHPUnit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\Robo\\PHPUnit\\Composer\\": "src-dev/Composer/",
            "Sweetchuck\\Robo\\PHPUnit\\Test\\Helper\\": "tests/_support/Helper/",
            "Sweetchuck\\Robo\\PHPUnit\\Tests\\Acceptance\\": "tests/acceptance/",
            "Sweetchuck\\Robo\\PHPUnit\\Tests\\Unit\\": "tests/unit/",
            "Sweetchuck\\Robo\\PHPUnit\\TestsFixtures\\": "tests/_data/fixtures/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "\\Sweetchuck\\Robo\\PHPUnit\\Composer\\Scripts::postInstallCmd"
        ],
        "post-update-cmd": [
            "\\Sweetchuck\\Robo\\PHPUnit\\Composer\\Scripts::postUpdateCmd"
        ]
    }
}
