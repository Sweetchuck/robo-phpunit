{
    "name": "sweetchuck/robo-phpunit",
    "description": "Robo task to run PHPUnit related commands",
    "license": "GPL-3.0-or-later",
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.1",
        "ext-pcre": "*",
        "consolidation/robo": "^1.0",
        "danielstjules/stringy": "^3.1"
    },
    "require-dev": {
        "codeception/codeception": "^2.2",
        "sweetchuck/cli-cmd-builder": "^0.0",
        "sweetchuck/codeception-module-robo-task-runner": "^0.0",
        "sweetchuck/git-hooks": "^0.0",
        "sweetchuck/robo-git": "^0.0",
        "sweetchuck/robo-phpcs": "^0.0",
        "symfony/finder": "^3.2 || ^4.0",
        "webmozart/path-util": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Sweetchuck\\Robo\\PHPUnit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sweetchuck\\Robo\\PHPUnit\\Composer\\": "src-dev/Composer/",
            "Sweetchuck\\Robo\\PHPUnit\\Test\\Helper\\": "tests/_support/Helper/",
            "Sweetchuck\\Robo\\PHPUnit\\Tests\\Acceptance\\": "tests/acceptance/",
            "Sweetchuck\\Robo\\PHPUnit\\Tests\\Unit\\": "tests/unit/",
            "Sweetchuck\\Robo\\PHPUnit\\TestsFixtures\\": "tests/_data/fixtures/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "\\Sweetchuck\\Robo\\PHPUnit\\Composer\\Scripts::postInstallCmd"
        ],
        "post-update-cmd": [
            "\\Sweetchuck\\Robo\\PHPUnit\\Composer\\Scripts::postUpdateCmd"
        ]
    }
}
